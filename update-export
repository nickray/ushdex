#tar czf ${PROJECT}-${DESCRIBE}.tgz --directory export/ .
#mv ${PROJECT}-${DESCRIBE}.tgz export/
tar czf ${PROJECT}-${BRANCH}.tgz --directory export/ .
mv ${PROJECT}-${BRANCH}.tgz export/

